{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "assets": ["api-gateway/src/templates/*"],
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"],
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/song-microservice",
  "projects": {
    "auth-microservice": {
      "type": "application",
      "root": "apps/auth-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/auth-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-microservice/tsconfig.app.json"
      }
    },
    "lib": {
      "type": "library",
      "root": "libs/lib",
      "entryFile": "index",
      "sourceRoot": "libs/lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lib/tsconfig.lib.json"
      }
    },
    "interact-microservice": {
      "type": "application",
      "root": "apps/interact-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/interact-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/interact-microservice/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "assets": [
          {
            "include": "/src/templates/*",
            "outDir": "dist/apps"
          }
        ],
        "watchAssets": true,
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "user-microservice": {
      "type": "application",
      "root": "apps/user-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/user-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-microservice/tsconfig.app.json"
      }
    },
    "song-microservice": {
      "type": "application",
      "root": "apps/song-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/song-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/song-microservice/tsconfig.app.json"
      }
    },
    "kafka": {
      "type": "application",
      "root": "apps/kafka",
      "entryFile": "main",
      "sourceRoot": "apps/kafka/src",
      "compilerOptions": {
        "tsConfigPath": "apps/kafka/tsconfig.app.json"
      }
    }
  }
}
